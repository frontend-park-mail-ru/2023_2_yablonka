{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["handlebars.runtime.js", "handlebars.precompiled.js"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "class-methods-use-this": "off",
        "import/no-unresolved": [2, { "ignore": ["\\.js$"] }],
        "import/no-cycle": "off",
        "import/no-named-as-default": "off",
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages",
                "jsx": "ignorePackages",
                "ts": "ignorePackages",
                "tsx": "ignorePackages"
            }
        ],
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "linebreak-style": ["error", "unix"],
        "object-curly-spacing": "off"
    },
    "globals": {
        "Handlebars": "readonly"
    }
}
