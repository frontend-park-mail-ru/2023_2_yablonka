<dialog id='card-date' class='padding-10-20 border-radius-10 card-date' popover>
    <div class='flex-column-centered gap-20 card-date__content'>
        <span class='font-size-18 font-weight-500 card-date__title'>Даты</span>
        <div class='flex-column-centered gap-10 start-date'>
            <span class='font-size-12 font-weight-bold start-date__title'>Начало</span>
            <div class='flex-row-centered gap-10 start-date__input-wrapper'>
                <input class='box-16-16 start-date__checkbox' type='checkbox' /><input
                    value='2023-11-28'
                    min='1900-01-01'
                    max='2100-01-01'
                    class='font-size-16 font-weight-500 padding-5-10 border-radius-5 start-date__date'
                    type='date'
                    style='color: var(--text-color-on-page-inactive)'
                    disabled
                />
            </div>
        </div>
        <div class='flex-column-centered gap-10 end-date'>
            <span class='font-size-12 font-weight-bold end-date__title'>Срок</span>
            <div class='flex-row-centered gap-10 end-date__input-wrapper'>
                <input class='box-16-16 end-date__checkbox' type='checkbox' />
                <input
                    value='2023-11-28'
                    min='1900-01-01'
                    max='2100-01-01'
                    class='font-size-16 font-weight-500 padding-5-10 border-radius-5 end-date__date'
                    type='date'
                    style='color: var(--text-color-on-page-inactive)'
                    disabled
                />
            </div>
        </div>
        <div class='flex-column-centered gap-10 card-date__buttons'>
            <button
                class='border-radius-5 padding-5-10 font-size-16 font-weight-500 btn btn-card-date_save'
            >Сохранить</button>
            <button
                class='border-radius-5 padding-5-10 font-size-16 font-weight-500 btn btn-card-date_delete'
            >Удалить</button>
        </div>
    </div>
</dialog>