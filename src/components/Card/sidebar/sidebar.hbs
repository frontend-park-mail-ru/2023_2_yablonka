<div class='flex-column-centered gap-40 card-data__card-actions'>
    <div class='flex-column-centered gap-20 card-actions__card-settings'>
        <span class='font-size-18 font-weight-500 card-settings__title'>Настройка карточки</span>
        {{#each settings as |setting|}}
            <button
                class='padding-0-10 gap-5 border-radius-10 flex-row-centered flex-start btn btn-card-settings__action'
            >
                <img class='box-24-24 action-logo' src='/svg/{{setting.icon}}' />
                <span
                    data-action='{{this.action}}'
                    class='font-size-16 font-weight-500 action-name'
                >{{setting.name}}</span>
            </button>
        {{/each}}

    </div>
    <div class='flex-column-centered gap-20 card-actions__user-actions'>
        <span class='font-size-18 font-weight-500 user-actions__title'>Действия с карточкой</span>
        {{#each actions as |action|}}
            <button
                class='padding-0-10 gap-5 border-radius-10 flex-row-centered flex-start btn btn-user-actions__action'
            >
                <img class='box-24-24 action-logo' src='/svg/{{action.icon}}' />
                <span
                    data-action='{{this.action}}'
                    class='font-size-16 font-weight-500 action-name'
                >{{action.name}}</span>
            </button>
        {{/each}}
    </div>
</div>