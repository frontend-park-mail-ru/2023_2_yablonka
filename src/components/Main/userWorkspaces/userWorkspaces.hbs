<div class='flex-column-centered gap-50 user-workspaces'>
    <div class='flex-column-centered flex-centered gap-20 workspaces'>
        {{#if this.yourWorkspaces}}
            <span class='font-size-22 font-weight-bold workspaces__title'>ВАШИ РАБОЧИЕ ПРОСТРАНСТВА</span>
            <div class='flex-column-centered flex-centered workspaces__container'>
                <div class='flex-column-centered gap-20 workspace'>
                    <span
                        class='font-size-18 font-weight-500 padding-0-10 workspace__title'
                    >Workspace
                        <span class='font-weight-bold'>123</span></span>
                    <div class='flex-row-centered gap-10 workspace__boards'>
                        <a
                            class='stratch-layout border-radius-5 link link-user-board'
                            href=''
                            style="background-image: url('../img/main_theme.jpg')"
                        >
                            <span class='font-size-16 font-weight-500 workspace-board__title'>Проект
                                1</span>
                        </a>
                        <button
                            class='stratch-layout border-radius-5 flex-centered btn btn-create-board'
                            href=''
                        >
                            <span
                                class='font-size-16 font-weight-500 workspace-board__create-title'
                            >Создать доску</span>
                        </button>
                    </div>
                </div>
            </div>
        {{else}}
            <div class='flex-row-centered'>
                <span class='font-size-16 font-weight-200 workspaces__title'>У вас пока что нет ни
                    одного рабочего пространства.&nbsp</span>
                <button class='font-size-16 font-weight-200 btn btn-create-first-workspace'>Создать
                    новое рабочее пространство</button>
            </div>
        {{/if}}
        {{#if this.inviteWorkspaces}}
            <span class='font-size-22 font-weight-bold workspaces__title'>ГОСТЕВЫЕ РАБОЧИЕ
                ПРОСТРАНСТВА</span>
            <div class='flex-column-centered flex-centered workspaces__container'>
                <div class='flex-column-centered gap-20 workspace'>
                    <span
                        class='font-size-18 font-weight-500 padding-0-10 workspace__title'
                    >Workspace
                        <span class='font-weight-bold'>123</span></span>
                    <div class='flex-row-centered gap-10 workspace__boards'>
                        <a
                            class='stratch-layout border-radius-5 link link-user-board'
                            href=''
                            style="background-image: url('../img/main_theme.jpg')"
                        >
                            <span class='font-size-16 font-weight-500 workspace-board__title'>Проект
                                1</span>
                        </a>
                        <button
                            class='stratch-layout border-radius-5 flex-centered btn btn-create-board'
                            href=''
                        >
                            <span
                                class='font-size-16 font-weight-500 workspace-board__create-title'
                            >Создать доску</span>
                        </button>
                    </div>
                </div>
            </div>
        {{else}}
            <div class='flex-row-centered gap-5'>
                <span class='font-size-16 font-weight-200 workspaces__title'>Вы пока что не
                    приглашены ни в одно рабочее пространство</span>
            </div>
        {{/if}}
    </div>
</div>