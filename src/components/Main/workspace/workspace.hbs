<div class='flex-column-centered gap-10 workspace'>
    <span class='font-size-18 font-weight-500 padding-0-10 flex-row-centered workspace__title'><span
            class='box-32-32 border-radius-5 flex-centered workspace-logo'
        >{{this.workspaceIcon}}</span>
        <span class='font-weight-bold padding-0-10'>{{this.workspaceName}}</span></span>
    <div class='flex-row-centered gap-10 workspace__boards'>
        {{#each boards as |board|}}
            {{{board}}}
        {{/each}}
        <button class='stratch-layout border-radius-5 flex-centered btn btn-create-board'>
            <span class='font-size-16 font-weight-500 workspace-board__create-title'>Создать доску</span>
        </button>
    </div>
</div>