<header class="header">
    <div class="header__logo">
        <a class="logo-href" href="/">
            <div class="logo-wrapper">
                <img
                    class="logo-wrapper__logo"
                    src="logo.svg"
                    alt="This place for logo"
                />
                <span class="logo-wrapper__tabula">Tabula</span>
            </div>
        </a>
    </div>
    <div class="header__menu">
        <div class="menu__menu-list">
            <span class="projects__title">Проекты</span>
            <img class="chevron-down" src="chevron-down.svg" alt="" />
        </div>
        <div class="menu__menu-list">
            <span class="favourites__title">Избранное</span>
            <img class="chevron-down" src="chevron-down.svg" alt="" />
        </div>
        <div class="menu__menu-list">
            <span class="templates__title">Шаблоны</span>
            <img class="chevron-down" src="chevron-down.svg" alt="" />
        </div>
        <button class="create-button">Создать</button>
    </div>
    <div class="filler"></div>
    <div class="header__search">
        <div class="input-wrapper">
            <img src="search.svg" alt="" /><input
                type="text"
                placeholder="Найти..."
            />
        </div>
        <div class="bell-wrapper">
            <img src="bell-notification.svg" alt="" />
        </div>
        <div class="avatar-wrapper">
            <img class="avatar" src="{{this.avatar}}" alt="Avatar" />
        </div>
        <div class="log-out-wrapper">
            <img class="log-out" src="exit.svg" alt="Выход" />
        </div>
    </div>
</header>